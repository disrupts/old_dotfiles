# Local functions
function logate-bit-XOR() {
  if   [[ ($1 == "0") && ($2 == "0") ]]; then; echo '0'
  elif [[ ($1 == "0") && ($2 == "1") ]]; then; echo '1'
  elif [[ ($1 == "1") && ($2 == "0") ]]; then; echo '1'
  elif [[ ($1 == "1") && ($2 == "1") ]]; then; echo '0'
  else; echo "ERROR: bad imput in logate-XOR-bin."
  fi
}

# Exported function
function logate-XOR-hex() {
  local -a hex1
  local -a hex2
  local -a res
  hex1=( $(logate-hex2bin $1 | sed 's/\(.\)/\1 /g' ) )
  hex2=( $(logate-hex2bin $2 | sed 's/\(.\)/\1 /g' ) )
  if [[ ${#hex1[@]} == ${#hex2[@]} ]]; then
    for ((i=1; i<=${#hex1[@]}; i++)); do
      res+=( $(logate-bit-XOR ${hex1[$i]} ${hex2[$i]}) )
    done
    unset i
    logate-bin2hex $(echo $res | sed 's/ //g')
  else
    echo "ERROR: bad imput in logate-XOR-hex."
  fi
}

logate-XOR-hex "$@"
